<!-- Body-->
<body>
  <%- include('includes/nav.ejs') %>

  <!-- Basic table -->
  <div class="table-responsive container">
    <table class="table">
      <thead style="background-color: #77b1d5;">
        <tr style="text-align:center;">
          <th>İlk Tarih</th>
          <th>Son Tarih</th>
          <th>Duyuru Başlığı</th>
          <th>Açıklama</th>
          <th>İşlemler</th>
        </tr>
      </thead>
      <tbody style="background-color: rgba(87, 168, 239, 0.23);">
        <% if(duyurular.length>0) { %>
          <% let sayi1 = 1; %>
          <% for(let duyuru of duyurular) { %>
            <tr style="text-align:center;">
              <td><%= duyuru.tarih %></td>
              <td><%= duyuru.sonTarih %></td>
              <td><%= duyuru.duyuru_adi %></td>
              <td><%= duyuru.aciklama %></td>
              <td>
                <form action="duyuru-sil" method="post">
                  <a href="duyuru-detay/<%= duyuru._id %>" class="btn btn-info 
                    btn-icon"><i class="ai-show"></i></a>
                  <input type="hidden" name="duyuruId" value="<%= duyuru._id %>">
                  <% if(yonetici) { %>
                    <!-- CSRF belirteci ekleme -->
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-danger btn-icon" value="1">
                      <i class="ai-trash"></i>
                    </button>
                    <a href="duyuru-guncelle/<%= duyuru._id %>" class="btn btn-outline-warning btn-icon"><i class="ai-edit"></i></a>
                  <% } %>
                </form>
              </td>
            </tr>
            <% sayi1++; %>
          <% } %>
        <% } else { %>
          <tr>
            <td colspan="5" style="text-align:center; background-color: rgba(235, 35, 201, 0.2);">Duyuru Yok!</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>


  <link rel="stylesheet" media="screen" href="assets/vendor/swiper/swiper-bundle.min.css">
  <link rel="stylesheet" media="screen" href="assets/vendor/lightgallery/css/lightgallery-bundle.min.css">

  <script src="/assets/vendor/swiper/swiper-bundle.min.js"></script>
  <script src="/assets/vendor/lightgallery/lightgallery.min.js"></script>
  <script src="/assets/vendor/lightgallery/plugins/fullscreen/lg-fullscreen.min.js"></script>
  <script src="/assets/vendor/lightgallery/plugins/zoom/lg-zoom.min.js"></script>
  <script src="/assets/vendor/lightgallery/plugins/thumbnail/lg-thumbnail.min.js"></script>

