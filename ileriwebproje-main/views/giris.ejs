		<!-- Page wrapper-->
		<main class="page-wrapper">
			<!-- Page content-->
			<div class="d-lg-flex position-relative h-100">
				<!-- Home button--><a
					class="text-nav btn btn-icon bg-light border rounded-circle position-absolute top-0 end-0 p-0 mt-3 me-3 mt-sm-4 me-sm-4"
					href="/"
					data-bs-toggle="tooltip"
					data-bs-placement="left"
					title="Anasayfa"
					><i class="ai-home"></i
				></a>
				<!-- Sign in form-->
				<div class="container d-flex flex-column justify-content-center align-items-center py-5 py-lg-0">
					<div class="d-flex flex-column w-lg-50 h-100 px-3 px-lg-5 pt-5" style="justify-content: center; align-items: center;"
						<div class="w-100 mt-auto" style="max-width: 526px">
							<h1>Giriş Yap</h1>
							<p class="pb-3 mb-3 mb-lg-4">Hesabın yok mu?&nbsp;&nbsp;<a href="/kayit">Kayıt ol!</a></p>
							<form class="needs-validation" novalidate="" method="post" action="/giris">
								<div class="pb-3 mb-3">
									<div class="position-relative">
										<i class="ai-mail fs-lg position-absolute top-50 start-0 translate-middle-y ms-3"></i>
										<input
											class="form-control form-control-lg ps-5"
											type="email"
											placeholder="Eposta Adresiniz"
											name="eposta"
											required
										/>
										<div class="invalid-feedback">Eposta adresini düzgün yaz lütfen.</div>
										<% if (hataMesaji && hataMesaji.includes('Geçersiz Eposta adresi')) { %>
										<div class="text-danger"><%= hataMesaji %></div>
										<% } %>
									</div>
								</div>
								<div class="mb-4">
									<div class="position-relative">
										<i class="ai-lock-closed fs-lg position-absolute top-50 start-0 translate-middle-y ms-3"></i>
										<div class="password-toggle">
											<input
												class="form-control form-control-lg ps-5"
												type="password"
												name="sifre"
												placeholder="Şifre"
												required="required"
											/>
											<label class="password-toggle-btn" aria-label="Show/hide password">
												<input class="password-toggle-check" type="checkbox" />
												<span class="password-toggle-indicator"></span>
											</label>
											<div class="invalid-feedback">Şifre girmeyi unutma.</div>
											<% if (hataMesaji && hataMesaji.includes('Hatalı şifre')) { %>
											<div class="text-danger"><%= hataMesaji %></div>
											<% } %>
										</div>
									</div>
								</div>
								<div class="d-flex flex-wrap align-items-center justify-content-between pb-4">
									<form-check class="my-1">
										<input class="form-check-input" type="checkbox" id="keep-signedin" />
										<label class="form-check-label ms-1" for="keep-signedin">Oturumu açık tut</label>
									</form-check>
									<a class="fs-sm fw-semibold text-decoration-none my-1" href="#">Şifremi Unuttum?</a>
								</div>
								<input type="hidden" name="_csrf" value="<%=csrfToken%>" />

								<button
									class="btn btn-lg w-100 mb-4"
									style="background-color: #000000"
									type="submit"
									name="giris"
									value="1"
								>
									Giriş Yap
								</button>
							</form>
						</div>
						<!-- Copyright-->
						<p class="w-100 fs-sm pt-5 mt-auto mb-0" style="max-width: 526px">
							<span class="text-muted text-center">&copy; Tüm hakları saklıdır.</span>
						</p>
					</div>
				</div>
